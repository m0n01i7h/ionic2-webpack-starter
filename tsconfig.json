{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "paths": {
      "services": [
        "src/services/"
      ],
      "pages": [
        "src/pages/"
      ],
      "common": [
        "src/common/"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  }
}